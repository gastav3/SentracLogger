<?xml version="1.0" encoding="utf-8" ?>
<Application xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:SentLogger.Misc"
             x:Class="SentLogger.App">
    
    <!-- Application resource dictionary -->
    <Application.Resources>
        
        <!--The common display design-->
        <ControlTemplate x:Key="MainDesign">
            <Grid RowSpacing="0" ColumnSpacing="0">
                <Grid.RowDefinitions TotalHeight="1*">
                    <RowDefinition Height="0.1125*" />
                    <RowDefinition Height="0.0125*" />
                    <RowDefinition Height="0.75*" />
                    <RowDefinition Height="0.0125*" />
                    <RowDefinition Height="0.1125*" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions TotalWidth="1.33333*">
                    <ColumnDefinition Width="0.0125*" />
                    <ColumnDefinition Width="0.104166*" />
                    <ColumnDefinition Width="1.1*" />
                    <ColumnDefinition Width="0.104166*" />
                    <ColumnDefinition Width="0.0125*" />
                </Grid.ColumnDefinitions>
                <BoxView Color="#5D74A1"
                   Grid.Row="0" Grid.Column="2"/>
                <Image Source=
                   "{local:ImageResource SentLogger.Resources.Images.INFICON_Main_display_320_240.png}"
                   Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
                <ContentPresenter Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3"/>
                <BoxView Color="#5D74A1" Grid.Row="4" Grid.Column="2"/>
            </Grid>
        </ControlTemplate>
        
	</Application.Resources>
</Application>