<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SentLogger.Views.GraphView"
             ControlTemplate="{StaticResource TabViewGraphDesign}">

    <ContentPage.Content>
        <Grid Grid.Row="4" Grid.RowSpan="2" Grid.Column="2" Grid.ColumnSpan="7">
            <Grid.RowDefinitions TotalHeight="0.632*">
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
                <RowDefinition Height="0.079*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions TotalWidth="1.283332*">
                <ColumnDefinition Width="0.091666*"/>
                <ColumnDefinition Width="0.125*"/>
                <ColumnDefinition Width="0.3125*"/>
                <ColumnDefinition Width="0.11*"/>
                <ColumnDefinition Width="0.005*"/>
                <ColumnDefinition Width="0.11*"/>
                <ColumnDefinition Width="0.3125*"/>
                <ColumnDefinition Width="0.125*"/>
                <ColumnDefinition Width="0.091666*"/>
            </Grid.ColumnDefinitions>
            
            <StackLayout Margin="0" Padding="0" Grid.Row="0"  Grid.RowSpan="8" Grid.Column="0" Grid.ColumnSpan="6">
                <ScrollView Orientation="Both" x:Name="GraphScroller">
                    <Frame BackgroundColor="#DCE2ED" Margin="0" Padding="0">
                        <AbsoluteLayout
                            x:Name="GraphDrawArea"
                            HeightRequest="{Binding GraphFrameSizeHeight}"
                            WidthRequest="{Binding GraphFrameSizeWidth}"
                            BackgroundColor="#DCE2ED"
                            Margin="0"
                            Padding="0">

                            <BoxView
                                x:Name="AcceptedValueLine"
                                BackgroundColor="Red"
                                AbsoluteLayout.LayoutBounds="{Binding AcceptedLineValuePos}"
                                AbsoluteLayout.LayoutFlags="None"/>

                            <Label
                                x:Name="ToolTipLabel"
                                BackgroundColor="Transparent"
                                Text="{Binding ToolTipValue}"
                                AbsoluteLayout.LayoutBounds="{Binding ToolTipPos}"
                                AbsoluteLayout.LayoutFlags="None">
                            </Label>
                        </AbsoluteLayout>
                    </Frame>
                </ScrollView>
                <Slider x:Name="SliderZoom"
                    Value="{Binding ZoomAmount, Mode=TwoWay}"
                    Minimum="-25"
                    Maximum="25"
                    Margin="0"/>
            </StackLayout>

            <Grid Grid.Row="0" Grid.RowSpan="8" Grid.Column="6" Grid.ColumnSpan="3" VerticalOptions="Start"
                Margin="0" Padding="0">
                <Grid.RowDefinitions TotalHeight="0.632*">
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                    <RowDefinition Height="0.079*"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions TotalWidth="0.529166*">
                    <ColumnDefinition Width="0.3125*"/>
                    <ColumnDefinition Width="0.125*"/>
                    <ColumnDefinition Width="0.091666*"/>
                </Grid.ColumnDefinitions>
                
                <Entry x:Name="AcceptedLineValueEntry"
                    Text="{Binding MaxAcceptedLineValue, Mode=TwoWay}"
                    HorizontalOptions="FillAndExpand">
                </Entry>

                <Button Text="Update"
                         Command="{Binding UpdateUiCommand}"
                         HorizontalOptions="FillAndExpand"
                         Margin="0"/>

                <Button Text="Previous Dot"
                         Command="{Binding PreviousDotCommand}"
                         HorizontalOptions="FillAndExpand"
                         Margin="0"/>

                <Button Text="Next Dot"
                         Command="{Binding NextDotCommand}"
                        HorizontalOptions="FillAndExpand"
                         Margin="0"/>
                <Button Text="Add Random Dot"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Command="{Binding AddNewRandomDotCommand}"
                         Margin="0"/>

                <Button Text="Remove Last Dot"
                         Command="{Binding RemoveLastGraphDotCommand}"
                         Margin="0"/>

            </Grid>
        </Grid>
    </ContentPage.Content>
</ContentPage>