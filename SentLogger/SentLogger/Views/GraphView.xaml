<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="SentLogger.Views.GraphView"
             ControlTemplate="{StaticResource MainDesign}">

    <ContentPage.Content>
        <StackLayout Grid.Row="2" Grid.Column="1" Grid.ColumnSpan="3">
            <Frame x:Name="GraphFrame"
                   BackgroundColor="LightGray" 
                   MinimumHeightRequest="{Binding MinimumGraphFrameSizeHeight}"
                   MinimumWidthRequest="{Binding MinimumGraphFrameSizeWidth}">
                
                <ScrollView Orientation="Both"
                            x:Name="GraphScroller">
                    <Frame>
                        <AbsoluteLayout
                            x:Name="GraphDrawArea"
                            HeightRequest="{Binding GraphFrameSizeHeight}"
                            WidthRequest="{Binding GraphFrameSizeWidth}"
                            BackgroundColor="GhostWhite">

                            <BoxView
                               x:Name="AcceptedValueLine"
                               BackgroundColor="Red"
                               AbsoluteLayout.LayoutBounds="{Binding AcceptedLineValuePos}"
                               AbsoluteLayout.LayoutFlags="None"
                                
                            ></BoxView>

                        </AbsoluteLayout>
                    </Frame>
                </ScrollView>
            </Frame>

            <Slider x:Name="SliderZoom"
                          Value="{Binding ZoomAmount, Mode=TwoWay}"
                          Minimum="-25"
                          Maximum="25"
                          HorizontalOptions="FillAndExpand"
                          VerticalOptions="Center" />

            <Entry 
                x:Name="AcceptedLineValueEntry"
                Text="{Binding MaxAcceptedLineValue, Mode=TwoWay}">
            </Entry>


            <Button Text="Add Random Dot"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Command="{Binding AddNewRandomDotCommand}"
                         Margin="0, 0, 0, 0"
                         ></Button>

            <Button Text="Remove Last Dot"
                         VerticalOptions="Center"
                         HorizontalOptions="Center"
                         Command="{Binding RemoveLastGraphDotCommand}"
                         Margin="0, 0, 0, 0"
                         ></Button>

            <Label Text="{Binding HelloVar}" 
                        x:Name="HelloText"
                        VerticalOptions="Center" 
                        HorizontalOptions="Center"
                        Margin="0, 0, 0, 0"/>
            
        </StackLayout>
    </ContentPage.Content>
</ContentPage>